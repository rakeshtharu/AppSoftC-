@model List<Diagnosis>
@{
    ViewData["Title"] = "Diagnosis";
}

<div class="container">
    <div class="row mt-3">
        <table class="table table-bordered border-primary">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Patient Id</th>
                    <th scope="col">Diagnosis Name</th>
                    <th scope="col">Medication Prescribed</th>
                    <th scope="col">Diagnosis Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var diag in Model)
                {
                    <tr>
                        <td>@diag.Id</td>
                        <td>@diag.PatientId</td>
                        <td>@diag.DiagnosisName</td>
                        <td>@diag.MedicationPrescribed</td>
                        <td>@diag.DiagnosisStatus</td>
                        <td>
                            <a href="/Diagnosis/Update/@diag.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
                            ||
                            <a href="/diagnosis/Delete/@diag.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>