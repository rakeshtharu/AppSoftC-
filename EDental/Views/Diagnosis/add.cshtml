@model Diagnosis
@{
    ViewData["Title"] = "New Diagnosis Entry";

    var diagnosisStatus = Enum.GetValues<DiagnosisStatus>();
    var diagnosisStatusList = diagnosisStatus.Select(x => new SelectListItem { Text = x.ToString(), Value = ((int)x).ToString() });
}
<form class="row g-3" asp-action="Add" method="post">
    <div class="col-md-6">
        <label asp-for="PatientId" class="form-label"></label>
        <input asp-for="PatientId" class="form-control">
    </div>
    <div class="col-md-6">
        <label asp-for="DiagnosisName" class="form-label"></label>
        <input asp-for="DiagnosisName" class="form-control">
    </div>
    <div class="col-12">
        <label asp-for="DiagnosisDate" class="form-label"></label>
        <input asp-for="DiagnosisDate" class="form-control">
    </div>
    <div class="col-12">
        <label asp-for="DoctorId" class="form-label"></label>
        <input asp-for="DoctorId" class="form-control">
    </div>
    <div class="col-12">
        <label asp-for="Symptoms" class="form-label"></label>
        <input asp-for="Symptoms" class="form-control">
    </div>
    <div class="col-12">
        <label asp-for="MedicationPrescribed" class="form-label"></label>
        <input asp-for="MedicationPrescribed" class="form-control">
    </div>
    <div class="col-12">
        <label asp-for="DiagnosisStatus" class="form-label"></label>
        <select asp-items="diagnosisStatusList" class="form-control" asp-for="DiagnosisStatus" > </select>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">  <i class="bi bi-floppy">  Save</i> </button>
    </div>
</form>
